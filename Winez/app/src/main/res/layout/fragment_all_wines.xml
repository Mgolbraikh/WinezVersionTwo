<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.winez.AllWinesFragment">
        <ProgressBar
            android:id="@+id/all_wines_waiting_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/all_wines_layout"
            android:visibility="gone">
                <ListView
                    android:id="@+id/all_wines_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/all_wines_empty_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/your_list_is_empty"
                    android:layout_gravity="center"/>
        </LinearLayout>
</RelativeLayout>
